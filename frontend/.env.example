# =============================================================================
# FLUXION AI - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it's already in .gitignore

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info
API_VERSION=v1

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Backend Node.js server
BACKEND_PORT=3000
BACKEND_HOST=localhost

# AI Engine Python server
AI_ENGINE_PORT=8000
AI_ENGINE_HOST=localhost
AI_ENGINE_URL=http://localhost:8000

# Frontend React server
FRONTEND_PORT=3001
FRONTEND_HOST=localhost
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL + TimescaleDB
DATABASE_URL=postgresql://fluxion_user:fluxion_pass@localhost:5432/fluxion_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=fluxion_dev
DATABASE_USER=fluxion_user
DATABASE_PASSWORD=fluxion_pass
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis for caching, sessions, and pub/sub
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600
REDIS_SESSION_TTL=86400

# =============================================================================
# GOOGLE CLOUD PLATFORM
# =============================================================================
# GCP Project Configuration
GOOGLE_CLOUD_PROJECT=fluxion-ai-dev
GOOGLE_APPLICATION_CREDENTIALS=./gcp-dev-key.json

# Pub/Sub Configuration
PUBSUB_EMULATOR_HOST=localhost:8085
PUBSUB_PROJECT_ID=fluxion-ai-dev

# Cloud SQL (Production)
# CLOUD_SQL_CONNECTION_NAME=fluxion-ai-prod:us-central1:fluxion-db
# CLOUD_SQL_DATABASE_URL=postgresql://username:password@/fluxion_prod?host=/cloudsql/fluxion-ai-prod:us-central1:fluxion-db

# Cloud Storage
GCS_BUCKET_NAME=fluxion-ai-uploads
GCS_BUCKET_REGION=us-central1

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_CREDENTIALS=true

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# WhatsApp Business API
WHATSAPP_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# POS Systems Integration
# Stellar POS
STELLAR_DB_HOST=localhost
STELLAR_DB_PORT=1433
STELLAR_DB_NAME=stellar_db
STELLAR_DB_USER=stellar_user
STELLAR_DB_PASSWORD=stellar_password

# Odoo ERP
ODOO_URL=https://your-odoo-instance.com
ODOO_DATABASE=your_odoo_db
ODOO_USERNAME=your_odoo_user
ODOO_PASSWORD=your_odoo_password

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# Prophet Forecasting
PROPHET_DAILY_SEASONALITY=true
PROPHET_WEEKLY_SEASONALITY=true
PROPHET_YEARLY_SEASONALITY=true
PROPHET_SEASONALITY_PRIOR_SCALE=10.0
PROPHET_HOLIDAYS_PRIOR_SCALE=10.0

# OpenAI (optional for chat agent)
OPENAI_API_KEY=your-openai-api-key-if-using-gpt

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================
# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_STATUS=true

# Performance Settings
REQUEST_TIMEOUT_MS=30000
KEEP_ALIVE_TIMEOUT_MS=5000
HEADERS_TIMEOUT_MS=60000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Logging
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Metrics
METRICS_ENABLED=true
METRICS_PREFIX=fluxion_ai
METRICS_PORT=9090

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Default Tenant Configuration
DEFAULT_TENANT_ID=fluxion-demo
DEFAULT_STORE_ID=valencia-warehouse
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=es_VE
DEFAULT_TIMEZONE=America/Caracas

# Inventory Settings
LOW_STOCK_THRESHOLD_PERCENT=20
CRITICAL_STOCK_THRESHOLD_PERCENT=5
OVERSTOCK_THRESHOLD_PERCENT=200
STOCK_REORDER_POINT_DAYS=14

# Alert Settings
ALERT_COOLDOWN_HOURS=4
MAX_ALERTS_PER_PRODUCT_PER_DAY=3
CRITICAL_ALERT_ESCALATION_HOURS=2

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Testing
TEST_DATABASE_URL=postgresql://fluxion_user:fluxion_pass@localhost:5432/fluxion_test
TEST_TIMEOUT_MS=10000

# Development Features
ENABLE_API_DOCS=true
ENABLE_DEBUG_ROUTES=true
ENABLE_SEED_DATA=true

# Mock Data
USE_MOCK_DATA=true
MOCK_DELAY_MS=100